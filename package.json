{
  "name": "Repohunter",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production pm2 start -i 2 ./dist/server --name=\"dev\"",
    "stop": "pm2 stop \"dev\"",
    "prestart": "npm run build:client; npm run build:server",
    "lint:server": "eslint src/server; exit 0",
    "lint:client": "eslint src/client; exit 0",
    "build:server": "rimraf dist/server && babel src/server -D --out-dir dist/server",
    "build:client": "rimraf public/admin/dist && webpack",
    "test:server": "NODE_ENV=test mocha --recursive --require babel-register",
    "start:devclient": "webpack --progress --colors --watch",
    "start:devserver": "nodemon --watch .env --watch src/server --exec 'babel-node src/server --source-maps'"
  },
  "keywords": [
    "javascript",
    "node",
    "express",
    "es6"
  ],
  "private": true,
  "author": "",
  "dependencies": {
    "axios": "^0.16.1",
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.2",
    "boom": "^4.3.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "font-awesome": "^4.7.0",
    "http-status-codes": "^1.1.6",
    "joi": "^10.5.0",
    "jsonwebtoken": "^7.4.1",
    "react": "^15.5.4",
    "react-bootstrap": "^0.31.0",
    "react-dom": "^15.5.4",
    "react-router": "^4.1.1",
    "swagger-jsdoc": "^1.9.4",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "css-loader": "^0.28.2",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.0.1",
    "file-loader": "^0.11.1",
    "mocha": "^3.4.1",
    "nodemon": "^1.11.0",
    "pm2": "^2.4.6",
    "rewire": "^2.5.2",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.1",
    "webpack": "^2.6.0"
  },
  "repository": "git@github.com:cmtanko/RepoHunter.git"
}
